<?xml version="1.0" encoding="utf-8" ?>
<project>
    <yoga-version>1</yoga-version>
    <compiler-version>2.10</compiler-version>

    <id>com.wighawag.game-utils</id>
    <version>0.1.1-SNAPSHOT</version>

    <main>Main</main>

    <sources>
        <source path="src"/>
    </sources>

    <tests framework="munit" path="test"/>

    <targets hxml="compile">
        <target name="swf">
            <param line="-swf-version 11"/>
            <param line="-swf-lib agalminiassembler.swf" />
        </target>
	<target name="cpp" >
		<param line="-D stage3d" />
	</target>
	<target name="js" >
		<param line="-D stage3d" />
	</target>
    </targets>
    
    <dependencies>
        <haxelib name="polygonal-ds" version="1.36"/>

        <repository id="com.wighawag.report.Report" version="0.1.1" />
        <repository id="com.wighawag.components-core" version="0.1.2-SNAPSHOT" />
        <repository id="com.wighawag.view" version="0.1.2-SNAPSHOT" />
        <repository id="com.wighawag.asset" version="0.1.2-SNAPSHOT" />
        <repository id="com.wighawag.ui" version="0.1.1" />
        <repository id="com.wighawag.gpu" version="0.1.0-SNAPSHOT" />


    </dependencies>
</project>
